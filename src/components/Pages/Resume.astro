---
import Layout from '@/layouts/Layout.astro';

import Education from '@/components/Sections/Education.astro';
import Experience from '@/components/Sections/Experience.astro';
import Hero from '@/components/Sections/Hero.astro';
import Skills from '@/components/Sections/Skills.astro';
import HardSoftSkillsCert from '@/components/Sections/HardSoftSkillsCert.astro';
import NavWrapper from '@/components/NavWrapper.astro';

import { fetchCV } from '@/api/cvApi';

const {lang = "en"} = Astro.props;

const {basics} = await fetchCV(lang)
const {name, label} = basics

const title = lang == "en" ? `${name}'s Resume - ${label}` : `CV de ${name} - ${label}`

---

<Layout title={title} lang={lang} path={lang == "en" ? "resume" : "/resume"}>
    <NavWrapper>
            <a href="/" class="back-link">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M19 12H5M12 19l-7-7 7-7"/>
                </svg>
               { lang == "en" ? "Return to home" : "Retornar al inicio" } 
        </a>
    </NavWrapper>

    <main>
        <Hero lang={lang} />
        <Experience lang={lang} />
        <Education lang={lang} />
        <Skills lang={lang} />
        <HardSoftSkillsCert lang={lang} />
    </main>
</Layout>

<style>

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--highlight);
        font-weight: 500;
        font-size: 1.3rem;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .back-link:hover {
        color: var(--text);
    }

    main {
        max-width: 1200px;
        padding: 2rem;
        margin: 0 auto;
        display: grid;
        gap: 2rem;
    }

    @media print {
        main {
            padding: 0;
        }
    }
</style>
