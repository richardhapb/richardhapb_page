---
const { title } = Astro.props
---
<section>
  {title && <h1>{title}</h1>}
  <slot />
</section>

<style>
  section {
    max-width: 700px;
    margin: 0 auto 95px;
  }

  h2 {
    text-decoration: underline;
    text-underline-offset: .4rem;
  }
  @media print {
    section h1 {
      page-break-after: avoid;
    }
  }
</style>
