---
const { title } = Astro.props
---
<section>
  {title && <h1>{title}</h1>}
  <slot />
</section>

<style>
  section {
    max-width: 700px;
    margin: 0 auto 95px;
  }

  h1 {
      color: var(--main-text-color);
  }

  @media print {
    section {
      page-break-before: auto;
      page-break-inside: auto;
            margin: 0 auto 45px;
    }

    h1 {
      page-break-before: auto;
      page-break-after: avoid;
      page-break-inside: auto;
    }
  }

  h2 {
    text-decoration: underline;
    text-underline-offset: .4rem;
  }
</style>
