---
import Section from "@/components/Section.astro";

import {fetchCV} from "@/api/cvApi"

const {skills} = await fetchCV()

---

<Section title="Aptitudes y habilidadaes">
  {
  skills.map(({name, keywords}) => {
    return (
            <article>
              <header>
              <h3>{name}</h3>
              </header>
              <footer>
                <ul>
                  {keywords.map(k => {
                    return <li>{k}</li>
                  })
                }
                </ul>
              </footer>
            </article>
            )
  })
  }
</Section>

<style>
  article {
    margin: 3.5rem 0;
  }
  ul {
    display: flex;
    flex-direction: row;
    gap:0.3rem;
    flex-wrap: wrap;
  }
  li {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    border: #ddd 1pt solid;
    background: #eee7;
    font-size: .8rem;
    padding: 0.2rem;
    height: 30px;
  }

  @media screen and (min-width: 800px) {
    li {
      width: calc(100% / 4 - 4px);
    }
  }

  @media print {
    li {
      width: calc(100% / 4 - 4px);
    }
  }

  h3 {
    font-size: 1.2rem;
    color: #444;
  }
</style>

