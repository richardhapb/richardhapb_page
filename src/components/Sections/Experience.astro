---
import Section from "@/components/Section.astro";

import {fetchCV} from "@/api/cvApi"

const {work} = await fetchCV()

---

<Section title="Experiencia">
  <div class="main">
  {
        work.map(({name, position, summary, highlights, startDate, endDate, technologies}) => {
      const years = startDate + " - " + (endDate ? endDate : "Actualidad")
      return (
      <article>
        <header>
          <div>
          <h2>{name}</h2>
          <h3>{position}</h3>
          </div>
          <time>{years}</time>
        </header>
        <main>
        <h4>Tecnolog√≠as</h4>
        <ul class="technologies">
          {technologies.map((t) => (
            <li>{t}</li>
          ))}
        </ul>
          {summary}
        </main>
        <footer>
        <ul>
          {
          highlights.map(h => {
            return <li>{h}</li>
          } )
          }
        </ul>
      </footer>
    </article>)
    }) 
  }
</div>
</Section>


<style>
  
  h2 {
    font-size: 1.5rem;
    color: #444;
    font-weight: 500;
  }

  h4 {
      font-size: 1.1rem;
      color: #000;
      font-weight: 300;
      margin: 0;
  }

  h3 {
    font-size: 1rem;
  }

  .technologies {
      list-style: none;
      display: flex;
      flex-direction: row;
      padding:0;
      margin: 0.7rem 0 1.2rem 0;
  }

  ul {
    color: #555;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    list-style: disc;
    font-size: 1rem;
    margin: 1.8rem 0;
  }

  li {
    margin-left: 1rem;
  }

  header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-end;
  }

  time {
    color: #444;
    font-weight: 500;
    margin-bottom: 1rem;
  }

</style>

