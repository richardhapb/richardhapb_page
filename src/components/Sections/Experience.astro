---
import Section from "@/components/Section.astro";

import {fetchCV} from "@/api/cvApi"

const {work} = await fetchCV()

---

<Section title="Experiencia">
  <div class="main">
  {
    work.map(({name, position, summary, highlights, startDate, endDate}) => {
      const years = startDate + " - " + (endDate ? endDate : "Actualidad")
      return (
      <article>
        <header>
          <div>
          <h2>{name}</h2>
          <h3>{position}</h3>
          </div>
          <time>{years}</time>
        </header>
        <main>
          {summary}
        </main>
        <footer>
        <ul>
          {
          highlights.map(h => {
            return <li>{h}</li>
          } )
          }
        </ul>
      </footer>
    </article>)
    }) 
  }
</div>
</Section>


<style>
  
  @media print {

    .main {
    }
    article {
      page-break-inside: auto;
    }
    footer {
      page-break-before: auto;
    }
  }

  h2 {
    font-size: 1.5rem;
    color: #444;
    font-weight: 500;
  }

  h3 {
    font-size: 1rem;
  }

  ul {
    color: #555;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    list-style: disc;
    font-size: 1rem;
    margin: 1.8rem 0;
  }

  li {
    margin-left: 1rem;
  }

  header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-end;
  }

  time {
    color: #444;
    font-weight: 500;
    margin-bottom: 1rem;
  }

</style>

