---
import Section from "@/components/Section.astro";

import {hardskills, softskills, certificates} from "@cv"
---

<Section>
  <div class="main">
    <div class="list">
      <h3>Habilidades blandas</h3>
      <ul>
    {
      softskills.map(s => {
        return (
        <li>{s}</li>
      ) 
      })
    }
      </ul>
    </div>
    <div class="list">
      <h3>Habilidades duras</h3>
      <ul>
    {
      hardskills.map(h => {
        return (
        <li>{h}</li>
      ) 
      })
    }
      </ul>
    </div>
    <div class="list">
      <h3>Certificaciones</h3>
      <ul>
    {
      certificates.map(({name}) => {
        return (
        <li>{name}</li>
      ) 
      })
    }
      </ul>
    </div>
  </div>
</div>
</Section>


<style>
  .main {
    display: flex;
    flex-direction: row;
    gap: 5rem;
  }

  h2 {
    font-size: 1.5rem;
    color: #444;
    font-weight: 500;
  }

  h3 {
    font-size: 1rem;
  }

  ul {
    color: #555;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    list-style: circle inside;
    font-size: 0.9rem;
    margin: 1.8rem 0;
  }

  .list {
    margin: 0;
  }

  header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-end;
  }

  time {
    color: #444;
    font-weight: 500;
    margin-bottom: 1rem;
  }
</style>



