---
import Section from "@/components/Section.astro";

import {hardskills, softskills, certificates} from "@cv"
---

<Section>
  <div class="main">
    <div class="list">
      <h3>Habilidades blandas</h3>
      <ul>
    {
      softskills.map(s => {
        return (
        <li>{s}</li>
      ) 
      })
    }
      </ul>
    </div>
    <div class="list">
      <h3>Habilidades duras</h3>
      <ul>
    {
      hardskills.map(h => {
        return (
        <li>{h}</li>
      ) 
      })
    }
      </ul>
    </div>
    <div class="list">
      <h3>Certificaciones</h3>
      <ul>
    {
      certificates.map(({name}) => {
        return (
        <li>{name}</li>
      ) 
      })
    }
      </ul>
    </div>
  </div>
</div>
</Section>


<style>
  .main {
    display: flex;
    flex-direction: row;
    gap: 5rem;
  }

  h3 {
    font-size: 1.1rem;
  }

  ul {
    color: #555;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    list-style: circle;
    font-size: .95rem;
    margin: 1.8rem 0;
  }

  .list {
    width: calc(100% / 3);
  }

</style>



